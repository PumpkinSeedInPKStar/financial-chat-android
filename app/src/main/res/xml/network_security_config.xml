<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Firebase URL을 위한 클리어텍스트 트래픽 허용 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">your-firebase-url.firebaseio.com</domain>
    </domain-config>

    <!-- Ollama API (로컬 서버)를 위한 클리어텍스트 트래픽 허용 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
</network-security-config>

