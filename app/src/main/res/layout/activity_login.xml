<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:id="@+id/login"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="@id/login">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi,"
            android:layout_marginTop="40dp"
            android:layout_marginStart="16dp"
            android:textSize="40dp"
            android:textColor="@color/font"
            android:fontFamily="@font/suit_semibold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to"
            android:layout_marginTop="6dp"
            android:layout_marginStart="16dp"
            android:textSize="40dp"
            android:textColor="@color/font"
            android:fontFamily="@font/suit_semibold"
            app:layout_constraintEnd_toEndOf="@id/txt1"
            app:layout_constraintStart_toStartOf="@id/txt1"
            app:layout_constraintTop_toBottomOf="@id/txt1"
            />
        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="금우미."
            android:layout_marginTop="6dp"
            android:layout_marginStart="16dp"
            android:textSize="40dp"
            android:textColor="@color/font"
            android:fontFamily="@font/suit_semibold"
            app:layout_constraintEnd_toEndOf="@id/txt2"
            app:layout_constraintStart_toStartOf="@id/txt2"
            app:layout_constraintTop_toBottomOf="@id/txt2"
            />

        <TextView
            android:id="@+id/txt_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user name or email:"
            android:layout_marginTop="70dp"
            android:layout_marginStart="12dp"
            android:textSize="16dp"
            android:textColor="@color/font"
            android:fontFamily="@font/suit_semibold"
            app:layout_constraintEnd_toEndOf="@id/txt3"
            app:layout_constraintStart_toStartOf="@id/txt3"
            app:layout_constraintTop_toBottomOf="@id/txt3"
            />
        <EditText
            android:id="@+id/login_id"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:hint="username@example.com"
            android:textSize="16dp"
            android:fontFamily="@font/suit_semibold"
            android:textColor="@color/gray2"
            android:layout_gravity="center"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:background="@drawable/box_gray1"
            app:layout_constraintEnd_toEndOf="@id/txt_user"
            app:layout_constraintStart_toStartOf="@id/txt_user"
            app:layout_constraintTop_toBottomOf="@id/txt_user"/>

        <TextView
            android:id="@+id/txt_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="password:"
            android:layout_marginTop="36dp"
            android:layout_marginStart="12dp"
            android:textSize="16dp"
            android:textColor="@color/font"
            android:fontFamily="@font/suit_semibold"
            app:layout_constraintEnd_toEndOf="@id/login_id"
            app:layout_constraintStart_toStartOf="@id/login_id"
            app:layout_constraintTop_toBottomOf="@id/login_id"
            />
        <EditText
            android:id="@+id/login_pw"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:hint="***********"
            android:textSize="16dp"
            android:fontFamily="@font/suit_semibold"
            android:textColor="@color/gray2"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:background="@drawable/box_gray1"
            app:layout_constraintEnd_toEndOf="@id/txt_pwd"
            app:layout_constraintStart_toStartOf="@id/txt_pwd"
            app:layout_constraintTop_toBottomOf="@id/txt_pwd"/>

        <ImageButton
            android:id="@+id/btn_find_pwd"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:background="@drawable/box_white"
            app:layout_constraintEnd_toEndOf="@id/find_pwd"
            app:layout_constraintTop_toTopOf="@id/find_pwd"
            android:contentDescription="로그인 버튼"
            tools:ignore="TouchTargetSize"/>
        <TextView
            android:id="@+id/find_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="forgot password?"
            android:layout_marginTop="6dp"
            android:layout_marginStart="254dp"
            android:textSize="14sp"
            android:textColor="@color/purp2"
            android:fontFamily="@font/suit_semibold"
            app:layout_constraintTop_toBottomOf="@id/login_pw"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/box_purp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_pw"
            android:contentDescription="로그인 버튼"
            tools:ignore="TouchTargetSize"/>
        <TextView
            android:id="@+id/txt_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/suit_bold"
            android:text="Log In"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@id/btn_login"
            app:layout_constraintEnd_toEndOf="@id/btn_login"
            app:layout_constraintTop_toTopOf="@id/btn_login"
            app:layout_constraintBottom_toBottomOf="@id/btn_login"/>

        <ImageButton
            android:id="@+id/join_us"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/box_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_login"
            android:contentDescription="회원가입 버튼"
            tools:ignore="TouchTargetSize"/>
        <TextView
            android:id="@+id/txt_join_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_bold"
            android:text="Join Us"
            android:textColor="@color/font"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@id/join_us"
            app:layout_constraintEnd_toEndOf="@id/join_us"
            app:layout_constraintTop_toTopOf="@id/join_us"
            app:layout_constraintBottom_toBottomOf="@id/join_us"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>